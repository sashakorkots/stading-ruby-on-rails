<%= render "shared/errors", object: @user %>

<%= form_with model: @user do |f| %>
  <div class="row mt-4">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :email, placeholder: "E-mail", class: "form-control form-control-lg" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Register", class: "mt-4 btn btn-primary" %>
<% end %>