<div class="card mt-3" id="answer-<%= answer.id %>">
  <section class="card-body">
    <p class="lead mt-3">
      <%= answer.body %>
      <br>
    </p>
    <time class="mt-4">
      <small><%=answer.created_at %></small>
      <br>
    </time>
    <%= link_to "Delete", question_answer_path(question, answer), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger btn-xs mt-3"%>
    <%= link_to "Edit", edit_question_answer_path(question, answer), class: "btn btn-info btn-xs mt-3"%>
  </section>
</div>
