<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f|%>
  <div class="card">
    <div class="card-body">
      <div class="row mt-2">
        <div class="col-sm-2">
          <%= f.label :body, class: "col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :body, class: "form-control" %>
        </div>
      </div>
      <%= f.submit "Submit answer", class: "btn btn-primary mt-2"%>
    </div>
  </div>
<% end %>
