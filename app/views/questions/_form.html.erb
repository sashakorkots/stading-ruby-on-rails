<%= form_with model: @question do |f|%>
    <div class="row mt-4">
        <%= f.label :title, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
            <%= f.text_field :title, required: true, minlength: 2, placeholder: 'Title', class: "form-control"%>
        </div>
    <div>

    <div class="row mt-4">
        <%= f.label :body, class: "col-sm-2 form-label"%>
        <div class="col-sm-10">
            <%= f.text_area :body, required: true, minlength: 2, class: "form-control"%>
        </div>
    </div>
	<%= f.submit "Submit", class: "mt-4 btn btn-primary"%>
<% end %>