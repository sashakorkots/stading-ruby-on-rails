<% provide :page_title, 'Show question' %>
<%= currently_at 'Questions' %>

<h1><%= @question.title %></h1>

<section>
	<p class="lead mt-3">
		<%= @question.body %>
		<br>
	</p>
	<time class="mt-4">
		<small><%= @question.created_at %></small>
	</time>
</section>
<div class="mt-2">
	<%= link_to "Edit", edit_question_path(@question), class: "btn btn-secondary"%>
	<%= link_to "Delete", question_path(@question), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>

<hr class="my-3">

<h2>Answers</h2>

<%= render 'answers/form' %>

<% @answers.each do |answer|%>
	<div class="card mt-3">
		<section class="card-body">
			<p class="lead mt-3">
				<%= answer.body %>
				<br>
			</p>
			<time class="mt-4">
				<small><%=answer.created_at %></small>
				<br>
			</time>
			<%= link_to "Delete", question_answer_path(@question, answer), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger btn-xs mt-3"%>
			<%= link_to "Edit", edit_question_answer_path(@question, answer), class: "btn btn-info btn-xs mt-3"%>
		</section>
	</div>
<% end %>