<h1><%= @question.title %></h1>

<section>
	<p class="lead mt-3">
		<%= @question.body %>
		<br>
	</p>
	<time class="mt-4">
		<small><%= @question.created_at %></small>
	</time>
</section>
<div class="mt-2">
	<%= link_to "Edit", edit_question_path(@question), class: "btn btn-secondary"%>
	<%= link_to "Delete", question_path(@question), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>

<hr class="my-3">

<h2>Answers</h2>

<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f|%>
	<div class="card">
		<div class="card-body">
			<div class="row mt-2">
				<div class="col-sm-2">
					<%= f.label :body, class: "col-form-label" %>
				</div>
				<div class="col-sm-10">
					<%= f.text_area :body, class: "form-control" %>
				</div>
			</div>
			<%= f.submit "Submit answer", class: "btn btn-primary mt-2"%>
		</div>
	</div>
<% end %> 