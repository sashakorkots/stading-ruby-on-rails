<% provide :page_title, 'Show question' %>
<%= currently_at 'Questions' %>

<h1><%= @question.title %></h1>

<section>
	<p class="lead mt-3">
		<%= @question.body %>
		<br>
	</p>
	<time class="mt-4">
		<small><%= @question.created_at %></small>
	</time>
</section>
<div class="mt-2">
	<%= link_to "Edit", edit_question_path(@question), class: "btn btn-secondary"%>
	<%= link_to "Delete", question_path(@question), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>
<hr class="my-3">
<h2>Answers</h2>

<%= render 'answers/form' %>
<%= render partial: 'answers/answer', collection: @answers, as: :answer, locals: {question: @question}%>