<% provide :page_title, 'Questions' %>
<% currently_at 'Questions' %>
<h1>Questions</h1>

<%= link_to "Create question", new_question_path, class: "mt-3 btn btn-success"%>

<% @questions.each do |question| %>
    <article class="card mt-3">   
        <div class="card-body">
            <h2><%= question.title %></h2>

            <section class="mt-4 card-text">
                <p>
                    <%= question.body %>                                
                </p>
                <time><small><%= question.created_at %></small></time>
            </section>

            <div class="mt-2">
                <%= link_to "Show", question_path(question), class: "btn btn-primary"%>
                <%= link_to "Edit", edit_question_path(question), class: "btn btn-secondary"%>
                <%= link_to "Delete", question_path(question), data: {method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger" %>
            </div>
        </div>
    </article>
<% end %>